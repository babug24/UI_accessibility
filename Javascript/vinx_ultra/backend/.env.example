# VINX ULTRA configuration
# Copy this file to .env and fill in keys.

# Anthropic (Claude Sonnet 7)
ANTHROPIC_API_KEY=
ANTHROPIC_API_URL=https://api.anthropic.com/v1/complete

# OpenAI (optional fallback or alternative)
OPENAI_API_KEY=
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Image provider (Replicate / Stability / OpenAI)
IMAGE_API_PROVIDER=placeholder  # replicate | openai | stability | placeholder
REPLICATE_API_TOKEN=
STABILITY_API_KEY=
OPENAI_IMAGE_API_KEY=

# Database (SQLite) path (default uses local db)
DATABASE_URL=sqlite:///vinx_ultra.db

# Moderation toggles
ENABLE_MODERATION=true
